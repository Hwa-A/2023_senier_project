<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="양양 포장마차 이용을 위해 \n\n 아래 권한을 허용해주세요."
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/permissionAccess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/appiconImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <ImageView
        android:id="@+id/appiconImage"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_icon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/permissionAccess"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF8C00"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/separation"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="@+id/mainText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/appiconImage"
        app:layout_constraintTop_toBottomOf="@+id/appiconImage" />

    <ImageView
        android:id="@+id/MapImage"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separation"
        app:srcCompat="@android:drawable/ic_dialog_map" />

    <TextView
        android:id="@+id/MapText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="위치권한 \n 지도 및 기기의 현위치 정보 수집"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/MapImage"
        app:layout_constraintTop_toTopOf="@+id/MapImage" />

    <ImageView
        android:id="@+id/GalleryImage"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/MapImage"
        app:layout_constraintTop_toBottomOf="@+id/MapImage"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/galleryText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:text="갤러리 \n 사진, 동영상 등 기기 내 \n 저장된 파일 및 외부 저장소를 사용"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toEndOf="@+id/GalleryImage"
        app:layout_constraintTop_toTopOf="@+id/GalleryImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
