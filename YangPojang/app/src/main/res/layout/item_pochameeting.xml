<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="145dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/border_rounded_coner_gray">

    <TextView
        android:id="@+id/meeting_Introduction"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="소개글:"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meeting_date"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="날짜:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meeting_Introduction" />

    <TextView
        android:id="@+id/meeting_age"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="연령대:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meeting_date" />

    <TextView
        android:id="@+id/meeting_participation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:text="N"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/meeting_maxAge"
        app:layout_constraintTop_toBottomOf="@+id/meeting_Time" />

    <TextView
        android:id="@+id/meeting_Time"
        android:layout_width="80dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="시간:"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/meeting_date"
        app:layout_constraintTop_toBottomOf="@+id/meeting_Introduction" />

    <TextView
        android:id="@+id/meeting_MaxNumber"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="N"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/meeting_Time" />

    <TextView
        android:id="@+id/meeting_minAge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="N"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/meeting_age"
        app:layout_constraintTop_toBottomOf="@+id/meeting_date" />

    <TextView
        android:id="@+id/meeting_maxAge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="N"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/meeting_minAge"
        app:layout_constraintTop_toBottomOf="@+id/meeting_date" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="8dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="~"
        app:layout_constraintEnd_toStartOf="@+id/meeting_maxAge"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/meeting_minAge"
        app:layout_constraintTop_toBottomOf="@+id/meeting_date" />

    <Button
        android:id="@+id/meeting_cancelbutton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="취소"
        android:textSize="15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meeting_MaxNumber" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="8dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/meeting_participation"
        app:layout_constraintTop_toBottomOf="@+id/meeting_Time" />

    <Button
        android:id="@+id/meeting_Attendbuton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:text="참가"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meeting_MaxNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>
