<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/border_rounded_coner_gray"
    android:elevation="40dp">


    <TextView
        android:id="@+id/MyReviewShopName"
        android:layout_width="187dp"
        android:layout_height="20dp"
        android:text="test shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/MyReviewShopAdd"
        android:layout_width="195dp"
        android:layout_height="13dp"
        android:text="address"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/MyReviewImage"
        app:layout_constraintTop_toBottomOf="@+id/MyReviewShopName"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/MyReviewCategory"
        android:layout_width="77dp"
        android:layout_height="11dp"
        android:text="shopCategory"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/MyReviewImage"
        app:layout_constraintTop_toBottomOf="@+id/MyReviewShopAdd"
        app:layout_constraintVertical_bias="0.101" />

    <ImageView
        android:id="@+id/MyReviewImage"
        android:layout_width="68dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089"
        app:srcCompat="@drawable/no_image_pic" />

    <TextView
        android:id="@+id/MyReviewSummary"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyReviewCategory"
        app:layout_constraintVertical_bias="0.166" />

    <ImageButton
        android:id="@+id/MyReviewFixBtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/MyReviewRatingBar"
        app:layout_constraintTop_toBottomOf="@+id/MyReviewShopAdd"
        app:layout_constraintVertical_bias="0.054"
        app:srcCompat="@drawable/pochareview_writebutton"
        app:tint="#AEA298" />

    <RatingBar
        android:id="@+id/MyReviewRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MyReviewCategory"
        app:layout_constraintTop_toBottomOf="@+id/MyReviewShopAdd"
        app:layout_constraintVertical_bias="0.054" />


</androidx.constraintlayout.widget.ConstraintLayout>