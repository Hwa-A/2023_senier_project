<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 상단 부분 (3:7 비율) -->
            <LinearLayout
                android:id="@+id/topLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#696969"
                android:orientation="vertical">

                <!-- 프로필 이미지와 정보 레이아웃 -->

                <!-- 버튼 레이아웃 -->
                <LinearLayout
                    android:id="@+id/profileInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:orientation="horizontal">

                    <!-- 프로필 이미지 레이아웃 -->
                    <LinearLayout
                        android:id="@+id/profileImageLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/profileImageView"
                            android:layout_width="215dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/profile_image" />

                    </LinearLayout>

                    <!-- 프로필 정보 레이아웃 -->
                    <LinearLayout
                        android:id="@+id/profileDataLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="닉네임 : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profile_birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생년 월일 : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profile_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성별 : "
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/settingButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="설정"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- 하단 부분 (3:7 비율) -->
            <LinearLayout
                android:id="@+id/bottomLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:background="#000000">

                <!-- 내가 좋아요 한 가게 -->
                <LinearLayout
                    android:id="@+id/likeShopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내가 좋아요 한 가게 >"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/my_like_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 내가 제보한 가게 -->

                <!-- 내가 만든 번개 -->

                <LinearLayout
                    android:id="@+id/reportShopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내가 제보한 가게 >"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/my_report_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/makeLightLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:text="내가 만든 번개 >"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/my_make_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
