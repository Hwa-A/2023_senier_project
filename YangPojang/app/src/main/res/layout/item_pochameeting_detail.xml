<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/meeting_Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="소개글"
        android:textAlignment="center"
        android:background="@drawable/border_recycleview"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <ImageView
        android:id="@+id/host_image"
        android:layout_width="261dp"
        android:layout_height="284dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_recycleview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meeting_Title"
        app:srcCompat="@drawable/profile_image" />

    <TextView
        android:id="@+id/host_nickname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:textAlignment="center"
        android:text="TextView"
        android:background="@drawable/border_recycleview"
        app:layout_constraintEnd_toEndOf="@+id/host_image"
        app:layout_constraintTop_toBottomOf="@+id/host_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participant_member"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_recycleview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_nickname"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>