<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginPUserInfo">

        <TextView
            android:id="@+id/reportshopTitle"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/white_coner"
            android:elevation="14dp"
            android:gravity="center"
            android:text="회원 가입"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/signCompleteBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/nickname"
            android:layout_width="411dp"
            android:layout_height="99dp"
            android:layout_marginTop="88dp"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:text="닉네임은"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/nicknameIs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다."
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/nickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userNickname"
            app:layout_constraintTop_toBottomOf="@+id/reportshopTitle"
            app:layout_constraintVertical_bias="0.865"
            tools:ignore="MissingConstraints,TextSizeCheck" />

        <EditText
            android:id="@+id/userNickname"
            android:layout_width="196dp"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="닉네임을 입력해주세요"

            android:inputType="text"
            android:textColorHint="#A3A3A3"
            app:layout_constraintBottom_toBottomOf="@+id/nickname"
            app:layout_constraintEnd_toEndOf="@+id/nickname"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toStartOf="@+id/nickname"
            app:layout_constraintTop_toTopOf="@+id/nickname"
            app:layout_constraintVertical_bias="0.83"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/birth"
            android:layout_width="413dp"
            android:layout_height="56dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/lightgray"
            android:paddingLeft="40dp"
            android:paddingTop="16dp"
            android:text="생년월일은"
            android:textSize="15dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNickname"
            tools:ignore="TextSizeCheck" />

        <android.widget.Button
            android:id="@+id/selectDateBtn"
            android:layout_width="135dp"
            android:layout_height="39dp"
            android:background="@android:color/transparent"
            android:text="날짜고르기"
            android:textColor="#ef7466"
            android:textColorLink="#FF9800"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/birth"
            app:layout_constraintEnd_toEndOf="@+id/birth"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/birth"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/showDate"
            android:layout_width="202dp"
            android:layout_height="35dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="입력된 생일"
            android:textColorHint="#787878"

            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.301"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectDateBtn"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/brithIs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="44dp"
            android:text="입니다."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/showDate"
            app:layout_constraintTop_toBottomOf="@+id/selectDateBtn" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="성별은"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showDate"
            tools:ignore="TextSizeCheck" />

        <RadioGroup
            android:id="@+id/sexGroup"
            android:layout_width="285dp"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sex">

            <RadioButton
                android:id="@+id/sexM"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="432dp" />

            <RadioButton
                android:id="@+id/sexF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여자"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />
        </RadioGroup>

        <ImageView
            android:id="@+id/profileImagesetting"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/border_rounded_coner"
            android:src="@drawable/profile_image"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sexGroup" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="프로필 사진\n등록하기"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/profileImagesetting"
            app:layout_constraintEnd_toEndOf="@id/profileImagesetting"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@id/profileImagesetting"
            app:layout_constraintTop_toTopOf="@id/profileImagesetting"
            app:layout_constraintVertical_bias="0.54" />

        <android.widget.Button
            android:id="@+id/signCompleteBtn"
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_btn"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:textSize="11dp"
            app:iconTint="#FF5722"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImagesetting"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
